<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleText"
            android:text="ðŸŽ® Rock Paper Scissors"
            android:layout_marginTop="55dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Choose your move:"
            android:textSize="20sp"
            android:textColor="#0F0E0E"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Rock -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_background"
                android:elevation="6dp">

                <ImageView
                    android:id="@+id/rockImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_rock"
                    android:scaleType="centerInside"
                    android:padding="12dp"
                    android:contentDescription="Rock"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>

            <!-- Paper -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_background"
                android:elevation="6dp">

                <ImageView
                    android:id="@+id/paperImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_paper"
                    android:scaleType="centerInside"
                    android:padding="12dp"
                    android:contentDescription="Paper"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>

            <!-- Scissors -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_background"
                android:elevation="6dp">

                <ImageView
                    android:id="@+id/scissorsImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_scissor"
                    android:scaleType="centerInside"
                    android:padding="12dp"
                    android:contentDescription="Scissors"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>
        </LinearLayout>

        <!-- Scores -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/userScoreText"
                android:text="Your Score: 0"
                android:textSize="20sp"
                android:textColor="#121212"
                android:layout_marginEnd="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/computerScoreText"
                android:text="Computer Score: 0"
                android:textSize="20sp"
                android:textColor="#141414"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/resultText"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#F01707"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
